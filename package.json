{
  "name": "@mateothegreat/svelte5-drag-and-drop",
  "version": "0.0.0",
  "type": "module",
  "svelte": "./index.js",
  "main": "./index.js",
  "module": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./index.js"
    }
  },
  "scripts": {
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "build": "npm run check && rimraf dist && cpx 'src/lib/**/*' dist && cpx package.json dist",
    "release": "svelte-package && cp package.json dist/package.json && cd dist && npm publish --access public"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.3.7",
    "@sveltejs/vite-plugin-svelte": "^4.0.1",
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^22.9.0",
    "@vitest/ui": "^2.1.5",
    "cpx": "^1.5.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.7",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "rimraf": "^6.0.1",
    "svelte": "^5.1.3",
    "svelte-check": "^4.0.5",
    "svelte-package": "^0.1.0",
    "tailwind-merge": "^2.5.4",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.5"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  }
}
